{
  "name": "theme-forum-api",
  "version": "1.0.0",
  "description": "Secure and scalable REST API for Theme Forum application",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "start:prod": "NODE_ENV=production node src/server.js",
    "dev": "nodemon src/server.js",
    "dev:debug": "nodemon --inspect src/server.js",
    "build": "npm run lint && npm run test:all",
    "test": "npm run test:unit",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:security": "node tests/test-security.js",
    "test:injection": "node tests/test-security-injection.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:security && npm run test:injection",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "lint:check": "npm run lint",
    "format": "prettier --write \"src/**/*.{js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,json,md}\"",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "security:check": "npm run test:all && npm run security:audit",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:backup": "node scripts/backup.js",
    "health:check": "curl -f http://localhost:3000/health || exit 1",
    "prepare": "husky install",
    "precommit": "npm run lint:check && npm run format:check",
    "postinstall": "npm run security:audit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BoogyHS/theme-forum-api.git"
  },
  "keywords": [
    "rest-api",
    "nodejs",
    "express",
    "mongodb",
    "security",
    "authentication",
    "authorization",
    "sql-injection-protection",
    "xss-protection",
    "form-validation",
    "jwt",
    "bcrypt",
    "rate-limiting",
    "cors",
    "helmet"
  ],
  "author": "BoogyHS",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BoogyHS/theme-forum-api/issues"
  },
  "homepage": "https://github.com/BoogyHS/theme-forum-api#readme",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "sqlstring": "^2.3.3",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/app.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  }
}